<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathGameWIthMaui.MainPage"
             BackgroundImageSource="math_bg.jpg">

    <ScrollView>
        <VerticalStackLayout
         Spacing="25"
         Padding="50">
            <Label 
             Text="This is math game!"
             FontSize="45"
             HorizontalOptions="Center"
             HorizontalTextAlignment="Center"/>
            <Label 
             Text="What game would you like to play?"
             FontSize="45"
             HorizontalOptions="Center"
             HorizontalTextAlignment="Center"/>

            <Grid
             RowDefinitions="*, *"
             ColumnDefinitions="*, *, *, *"
             ColumnSpacing="10"
             RowSpacing="10"
             >


                <Button Grid.Column="0"
                     Text="+"
                     Clicked="OnGameChosen"
                     FontSize="60"/>
                <Button Grid.Column="1"
                     Text="-"
                      Clicked="OnGameChosen"
                     FontSize="60"/>
                <Button Grid.Column="2" 
                     Text="x"
                      Clicked="OnGameChosen"
                     FontSize="60"/>
                <Button Grid.Column="3" 
                     Text="/"
                      Clicked="OnGameChosen"
                     FontSize="60"/>

                <Button Grid.Row="1"
                     Grid.ColumnSpan="4"
                     BackgroundColor="ForestGreen"
                     Text="View Previous  Games"
                     Clicked="OnViewPreviousGameChosen"
                     FontSize="30"
                     Padding="20"
                     />

            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
